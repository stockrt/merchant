<p id="notice"><%= notice %></p>

<h1>All Products</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Product</th>
      <th>Price</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to image_tag("products/#{product.image_url}"), product_path(product) %></td>
        <td><span class="product_title"><%= link_to product.title, product_path(product) %></span><%= product.description %></td>
        <td><%= print_price(product.price) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p><%= link_to 'Create a New Product', new_product_path, id: 'new_product' %></p>
